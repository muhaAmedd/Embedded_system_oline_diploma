

#include <stdio.h>
#include <stdlib.h>

int main(void) {
	const int n;
	float sum=0,avg;
	printf("Enter the numbers of data: ");
	fflush(stdin);fflush(stdout);
	scanf("%d",&n);
	float nums[n];
	for(int i=0;i<n;i++){
		printf("Enter number %d: ",i+1);
		fflush(stdin);fflush(stdout);
		scanf("%f",&nums[i]);
		sum+=nums[i];
	}
	avg=sum/n;
	printf("Average = %.2f",avg);


	return EXIT_SUCCESS;
}
